<header>
    <nav class="bg-green-900 lg:pr-12 xl:pr-20">
        <div class="max-w-7xl mx-auto px-2 sm:px-4 lg:px-8">
            <div class="relative flex items-center justify-between h-16">
                <div class="flex items-center px-2 lg:px-0">
                    <div class="hidden lg:block flex-shrink-0">
                        <%= image_tag("Logo.svg", :alt => "Backwardible Logo", :class => "block w-12 ml-4") %>
                    </div>
                    <div class="lg:block lg:ml-6">
                        <div class="flex">
                            <a href="/" class="px-2 md:px-3 py-2 rounded-md text-sm leading-5 font-medium text-white hover:bg-gray-900 focus:outline-none focus:text-white focus:bg-gray-700 transition duration-150 ease-in-out <%= 'bg-gray-900' if @nav == 'home' %> ">Home</a>
                            <a href="/top" class="ml-1 md:ml-4 px-2 md:px-3 py-2 rounded-md text-sm leading-5 font-medium text-gray-300 hover:text-white hover:bg-gray-900 focus:outline-none focus:text-white focus:bg-gray-700 transition duration-150 ease-in-out <%= 'bg-gray-900' if @nav == 'top' %> ">Top</a>
                            <a href="/table" class="ml-1 md:ml-4 px-2 md:px-3 py-2 rounded-md text-sm leading-5 font-medium text-gray-300 hover:text-white hover:bg-gray-900 focus:outline-none focus:text-white focus:bg-gray-700 transition duration-150 ease-in-out <%= 'bg-gray-900' if @nav == 'table' %> ">Table</a>
                        </div>
                    </div>
                </div>
                <div class="flex-1 flex justify-center px-2 lg:ml-6 lg:justify-end">
                    <div class="max-w-lg w-full lg:max-w-xs">
                        <%= form_with(url: "/search", method: "get", local: true, data: { controller: "search" }) do |form| %>
                        <%= form.label :Search, for: "q", class: "sr-only" %>
                        <div class="relative">
                            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                            </div>
                            <%= form.text_field :q, id: "search", placeholder: "Search", type: "search", data: { target: 'search.field' }, class: "block w-full pl-3 pr-3 py-2 border border-transparent rounded-md leading-5 placeholder-gray-400 focus:outline-none bg-white text-gray-900 sm:text-sm transition duration-150 ease-in-out" %>
                        </div>
                        <% end %>
                    </div>
                </div>
            </div>
        </div>
    </nav>
</header>