<ul class="grid grid-cols-1 gap-6 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4">
   <% @games.each do |game| %>

   <li class="col-span-1 flex flex-col text-center bg-white rounded-lg shadow">
      <div class="flex-1 flex flex-col p-2">
         <img class="w-32 h-32 overflow-hidden flex-shrink-0 mx-auto bg-black rounded-sm" src=<%= game.image %>
            alt=<%= game.title %>>
      </div>
      <div class="border-t border-gray-200">
         <div class="-mt-px flex">

            <div class="-ml-px w-0 flex-1 flex">
               <div class="flex-1 flex flex-col p-2">
                  <h3 class="mt-2 text-gray-900 text-sm leading-5 font-medium"> <%= game.title %> </h3>
                  <dl class="mt-1 flex-grow flex flex-col justify-between">

                     <dt class="sr-only">Score</dt>
                     <dd>
                        <span class="px-2 py-1 text-green-900 text-xs leading-4 font-medium bg-green-100 rounded-full">
                           <%= game.score %> </span>
                     </dd>
                  </dl>
               </div>
            </div>
         </div>
      </div>
   </li>
   <% end %>

</ul>