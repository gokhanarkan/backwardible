<% if @page_range %>

<div class="px-2 my-10 xl:px-32">
    <nav class="border-t border-gray-200 px-4 flex items-center justify-between sm:px-0 my-4">
        <div class="w-0 flex-1 flex">
            <% unless @games.first_page? %>
          <a href="?page=1" class="mt-2 mr-1 relative inline-flex items-center px-2 py-2 border border-gray-300 text-sm leading-5 font-medium rounded-md text-gray-700 bg-white hover:text-gray-500 focus:outline-none focus:shadow-outline-blue focus:border-blue-300 active:bg-gray-100 active:text-gray-700 transition ease-in-out duration-150">
                  <svg class="mr-1 h-5 w-5 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 19l-7-7 7-7m8 14l-7-7 7-7"></path>
                  </svg>
            First
                  </a>
          <a href="<%=  path_to_prev_page @games  %>" class="mt-2 mr-1 relative inline-flex items-center px-2 py-2 border border-gray-300 text-sm leading-5 font-medium rounded-md text-gray-700 bg-white hover:text-gray-500 focus:outline-none focus:shadow-outline-blue focus:border-blue-300 active:bg-gray-100 active:text-gray-700 transition ease-in-out duration-150">
            <svg class="mr-1 h-5 w-5 text-gray-600" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M7.707 14.707a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414l4-4a1 1 0 011.414 1.414L5.414 9H17a1 1 0 110 2H5.414l2.293 2.293a1 1 0 010 1.414z" clip-rule="evenodd"/>
            </svg>
            Prev
          </a>
          <%  end %>
        </div>
        <div class="hidden md:flex">
            <% for page in @page_range do %>
            <% if page == @games.current_page %>
            <a href="?page=<%= page %>" class="-mt-px border-t-2 border-green-500 pt-4 px-4 inline-flex items-center text-sm leading-5 font-medium text-green-600 focus:outline-none focus:text-green-800 focus:border-green-700 transition ease-in-out duration-150">
                <%= page %>
            </a>
            <% else %>
            <a href="?page=<%= page %>" class="-mt-px border-t-2 border-transparent pt-4 px-4 inline-flex items-center text-sm leading-5 font-medium  text-white hover:text-green-500 hover:border-gray-300 focus:outline-none focus:text-green-600 focus:border-gray-400 transition ease-in-out duration-150">
                <%= page %>
            </a>
            <% end %>
            <% end %>
        </div>
        <div class="w-0 flex-1 flex justify-end">
            <% unless @games.last_page? %>
          <a href="<%=  path_to_next_page @games  %>" class="mt-2 ml-3 relative inline-flex items-center px-2 py-2 border border-gray-300 text-sm leading-5 font-medium rounded-md text-gray-700 bg-white hover:text-gray-500 focus:outline-none focus:shadow-outline-blue focus:border-blue-300 active:bg-gray-100 active:text-gray-700 transition ease-in-out duration-150">
            Next
            <svg class="ml-1 h-5 w-5 text-gray-600" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M12.293 5.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-2.293-2.293a1 1 0 010-1.414z" clip-rule="evenodd"/>
            </svg>
          </a>
          <a href="?page=<%=  @games.total_pages  %>" class="mt-2 ml-1 relative inline-flex items-center px-2 py-2 border border-gray-300 text-sm leading-5 font-medium rounded-md text-gray-700 bg-white hover:text-gray-500 focus:outline-none focus:shadow-outline-blue focus:border-blue-300 active:bg-gray-100 active:text-gray-700 transition ease-in-out duration-150">
            Last
                  <svg class="ml-1 h-5 w-5 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 5l7 7-7 7M5 5l7 7-7 7"></path>
                  </svg>
          </a>
          <%  end %>
        </div>
    </nav>
    <%= page_entries_info @games %>
</div>

<% end %>